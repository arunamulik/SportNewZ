<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Investment_Area_Can_not_Changed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(SUM_Payments__c !=0,  ISCHANGED( Investment_Area__c ) )</errorConditionFormula>
    <errorDisplayField>Investment_Area__c</errorDisplayField>
    <errorMessage>To change the Investment Area please delete all payments first or contact the administrator.</errorMessage>
</ValidationRule>
