    <rules>
        <fullName>Pending Requirement</fullName>
        <actions>
            <name>Update_Requirement_status</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <description>This workflow will update the Requirement status to Pending from Overdue if due date is future date.</description>
        <formula>AND(  Due_Date__c &gt;  TODAY() , ISPICKVAL(Status__c , &apos;Overdue&apos;) )</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
