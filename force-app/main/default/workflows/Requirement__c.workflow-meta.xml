    <rules>
        <fullName>Auto-populate Completed Date In Requirements</fullName>
        <actions>
            <name>Update_Completed_Date</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 OR 2</booleanFilter>
        <criteriaItems>
            <field>User.UserType</field>
            <operation>contains</operation>
            <value>Partner</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Profile_Name__c</field>
            <operation>contains</operation>
            <value>Partner</value>
        </criteriaItems>
        <description>Auto-populate Completed Date In Requirements</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Cancelled Requirement</fullName>
        <actions>
            <name>Status_is_Cancelled</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>NOT(ISBLANK(Cancelled_Date__c))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Change Requirement Status Completed</fullName>
        <actions>
            <name>Status_Completed1</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(ISCHANGED( Completed_Date__c ),OR(ISPICKVAL( Status__c , &apos;Overdue&apos;),ISPICKVAL( Status__c , &apos;Pending&apos;)),OR(ISPICKVAL($User.UserType , &apos;Partner&apos;),CONTAINS( $Profile.Name , &apos;Partner&apos;)))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Completed Requirement</fullName>
        <actions>
            <name>Status_Completed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <formula>(ispickval(Status__c,&quot;Pending&quot;) || ispickval(Status__c,&quot;Overdue&quot;)) &amp;&amp; OR(AND(ISNEW(), not(isblank(Completed_Date__c))), AND(isblank(priorvalue(Completed_Date__c)), not(isblank(Completed_Date__c))))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
